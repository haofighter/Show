<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myself.show.show">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Ui.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Ui.MainActivity" />
        <activity
            android:name=".Ui.Login.LoginActivityTheme"
            android:label="@string/title_activity_login"
            android:parentActivityName=".base.ThemeBaseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.myself.show.show.base.ThemeBaseActivity" />
        </activity>

        <service
            android:name=".Ui.music.musicService.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".base.BaseActivity"></activity>

    </application>

</manifest>